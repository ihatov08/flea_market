    %ul.slick-dots
      %li.slick-active{ role: 'presentation' }
        %button#slick-slide-control00
      %li{ role: 'presentation' }
        %button#slick-slide-control01
.toppage-main
  .toppage-main__category-top
    人気のカテゴリー
    %ul.toppage-main__list
      %li.toppage-main__menu
        .toppage-main__logo
          レディース
        .toppage-main__logo
          メンズ
        .toppage-main__logo
          家電・スマホ・カメラ
        .toppage-main__logo
          おもちゃ・ホビー・グッズ
  .toppage-main__category-bottom
    .toppage-main__category-name
      .toppage-main__text
        新着アイテム
        .toppage-main__item-more
          %a.toppage-main__more-link{:href => "#"} もっと見る &gt;
      .toppage-main__item
        .toppage-main__contents
          - Item.limit(10).each do |item|
            .toppage-main__content
              = link_to item do
                .toppage-main__image
                  %span
                    = number_to_currency item.price
                  = image_tag(item.images.first&.url || asset_path("bed.png"))
                .toppage-main__item-name
                  %span= item.name
